# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 5
}

order += "volume master"
order += "battery 0"
order += "run_watch VPN"
order += "ethernet eno1"
order += "disk /"
order += "load"
order += "cpu_temperature 0"
order += "tztime local"

ethernet eno1 {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip"
  format_down = "E: down"
}

battery 0 {
  format = "%status %percentage %remaining"
}

run_watch VPN {
  pidfile = "/var/run/openvpn*.pid"
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}

cpu_temperature 0 {
  format = "T: %degrees °C"
}

load {
  format = "%1min"
}

disk "/" {
  format = "%avail"
}

volume master {
  format = "♪: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
