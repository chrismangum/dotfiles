set my_tmpsecret=`gpg2 -o ~/.sec/.tmp -d ~/.sec/pass.gpg`
set my_gacct=`awk '/acct/ {print $2}' ~/.sec/.tmp`
set my_gpass=`awk '/pass/ {print $2}' ~/.sec/.tmp`
set my_gurl=`awk '/url/ {print $2}' ~/.sec/.tmp`
set my_del=`rm ~/.sec/.tmp`

set imap_user = "$my_gacct"
set imap_pass = "$my_gpass"

set smtp_url = "$my_gurl"
set smtp_pass = "$my_gpass"
set from = "$my_gacct"
set realname = "Chris Mangum"

set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set record = "+[Gmail]/Sent Mail"
set postponed = "+[Gmail]/Drafts"

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

set sort = 'threads'
set sort_aux = 'reverse-date-received'
set imap_check_subscribed

set editor = "/usr/bin/vim"
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc

#key bindings
bind index "^" imap-fetch-mail

