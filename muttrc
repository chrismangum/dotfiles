set my_tmpsecret=`gpg -o ~/.tmp -d ~/.mutt/gpg/pass.gpg`
set my_gacct=`awk '/acct/ {print $2}' ~/.tmp`
set my_gpass=`awk '/pass/ {print $2}' ~/.tmp`
set my_gurl=`awk '/url/ {print $2}' ~/.tmp`
set my_del=`rm ~/.tmp`

#receive
set imap_user = "$my_gacct"
set imap_pass = "$my_gpass"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set mail_check = 60
set imap_keepalive = 300
set imap_check_subscribed
unset imap_passive
unset record

#send
set smtp_url = "$my_gurl"
set smtp_pass = "$my_gpass"
set from = "$my_gacct"
set realname = "Chris Mangum"
set signature = "~/.mutt/signature"

#compose
set alias_file= "~/.mutt/aliases"
set editor = "/usr/bin/vim"
set include
source $alias_file

#view
set pager_stop
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set wrap = 75
set nomarkers
set tilde
hdr_order Date From To Cc
ignore "X-Mailer"
ignore "User-Agent"

#cache
set header_cache = "~/.cache/mutt/headers"
set message_cachedir = "~/.cache/mutt/bodies"

#render HTML
auto_view text/html
alternative_order text/plain text/html

#custom key bindings
bind index "^" imap-fetch-mail

#open urls
macro index \cb "|urlview\n"
macro pager \cb "|urlview\n"

#colors
color  attachment  brightmagenta  default
color  error       brightred      default
color  hdrdefault  red            default
color  indicator   brightyellow   red
color  markers     brightcyan     default
color  message     brightcyan     default
color  normal      default        default
color  quoted      brightblue     default
color  search      default        green
color  signature   red            default
color  status      green          default
color  tilde       magenta        default
color  tree        magenta        default
