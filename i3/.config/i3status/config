# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 5
}

order += "volume master"
order += "run_watch VPN"
order += "ethernet eno1"
order += "load"
order += "tztime local"

ethernet eno1 {
  format_up = "E: %ip"
  format_down = "E: down"
}

run_watch VPN {
  pidfile = "/var/run/openvpn*.pid"
}

tztime local {
  format = "%m-%d %H:%M"
}

load {
  format = "%1min"
}

volume master {
  format = "♪: %volume"
  device = "default"
  mixer = "PCM"
  mixer_idx = 0
}
